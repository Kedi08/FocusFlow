@model FocusFlow.Models.Mitarbeiter

@{
    ViewData["Title"] = "Mitarbeiterdetails";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Mitarbeiterdetails</h2>
                </div>
                <div class="card-body">
                    <ul class="list-group mb-3">
                        <li class="list-group-item"><strong>Personalnummer:</strong> @Model.Personalnummer</li>
                        <li class="list-group-item"><strong>Name:</strong> @Model.Vorname @Model.Nachname</li>
                        <li class="list-group-item"><strong>Abteilung:</strong> @Model.Abteilung</li>
                        <li class="list-group-item"><strong>Arbeitspensum:</strong> @Model.Arbeitspensum%</li>
                        @if (!string.IsNullOrEmpty(Model.Funktionen))
                        {
                            <li class="list-group-item"><strong>Funktionen:</strong> @Model.Funktionen</li>
                        }
                    </ul>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">Zurück zur Liste</a>
                        <a asp-action="Edit" asp-route-id="@Model?.MitarbeiterId" class="btn btn-primary">Bearbeiten</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
