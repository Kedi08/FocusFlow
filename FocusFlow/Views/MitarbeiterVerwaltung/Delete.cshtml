@model FocusFlow.Models.Mitarbeiter

@{
    ViewData["Title"] = "Mitarbeiter löschen";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">Mitarbeiter löschen</h2>
                </div>
                <div class="card-body">
                    <p class="lead">Bist du sicher, dass du diesen Mitarbeiter löschen möchtest?</p>

                    <ul class="list-group mb-3">
                        <li class="list-group-item"><strong>Personalnummer:</strong> @Model.Personalnummer</li>
                        <li class="list-group-item"><strong>Name:</strong> @Model.Vorname @Model.Nachname</li>
                        <li class="list-group-item"><strong>Abteilung:</strong> @Model.Abteilung</li>
                        <li class="list-group-item"><strong>Arbeitspensum:</strong> @Model.Arbeitspensum%</li>
                    </ul>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="MitarbeiterId" />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Abbrechen</a>
                            <button type="submit" class="btn btn-danger">Löschen</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
