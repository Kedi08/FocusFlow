@model FocusFlow.Models.Mitarbeiter

@{
    ViewData["Title"] = "Mitarbeiter bearbeiten";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Mitarbeiter bearbeiten</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="MitarbeiterId" />

                        <div class="mb-3">
                            <label asp-for="Personalnummer" class="form-label">Personalnummer</label>
                            <input asp-for="Personalnummer" type="number" class="form-control" placeholder="Eindeutige Personalnummer eingeben" />
                            <span asp-validation-for="Personalnummer" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="Nachname" class="form-label">Nachname</label>
                                <input asp-for="Nachname" class="form-control" placeholder="Nachname eingeben" />
                                <span asp-validation-for="Nachname" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Vorname" class="form-label">Vorname</label>
                                <input asp-for="Vorname" class="form-control" placeholder="Vorname eingeben" />
                                <span asp-validation-for="Vorname" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Abteilung" class="form-label">Abteilung</label>
                            <input asp-for="Abteilung" class="form-control" placeholder="Abteilung eingeben" />
                            <span asp-validation-for="Abteilung" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Arbeitspensum" class="form-label">Arbeitspensum (%)</label>
                            <input asp-for="Arbeitspensum" type="number" class="form-control" min="0" max="100" step="1" placeholder="0 bis 100%" />
                            <span asp-validation-for="Arbeitspensum" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Funktionen" class="form-label">Funktionen</label>
                            <input asp-for="Funktionen" class="form-control" placeholder="Mitarbeiterfunktionen eingeben" />
                            <span asp-validation-for="Funktionen" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">Abbrechen</a>
                            <button type="submit" class="btn btn-primary">Speichern</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
