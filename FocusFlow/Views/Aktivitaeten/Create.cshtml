@model FocusFlow.Models.Aktivitaet

@{
    ViewData["Title"] = "Neue Aktivität erstellen";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Neue Aktivität erstellen</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Name der Aktivität</label>
                            <input asp-for="Name" class="form-control" placeholder="Aktivitätsname eingeben" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="StartdatumGeplant" class="form-label">Geplantes Startdatum</label>
                                <input asp-for="StartdatumGeplant" type="date" class="form-control" />
                                <span asp-validation-for="StartdatumGeplant" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="EnddatumGeplant" class="form-label">Geplantes Enddatum</label>
                                <input asp-for="EnddatumGeplant" type="date" class="form-control" />
                                <span asp-validation-for="EnddatumGeplant" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Budget" class="form-label">Budget (CHF)</label>
                            <input asp-for="Budget" type="number" step="0.01" class="form-control" placeholder="Betrag eingeben" />
                            <span asp-validation-for="Budget" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MitarbeiterId" class="form-label">Verantwortlicher Mitarbeiter</label>
                            <select asp-for="MitarbeiterId" class="form-select" asp-items="ViewBag.MitarbeiterId">
                                <option value="">-- Mitarbeiter auswählen --</option>
                            </select>
                            <span asp-validation-for="MitarbeiterId" class="text-danger"></span>
                        </div>

                        <input type="hidden" name="ProjektphaseId" value="@ViewBag.ProjektphaseId" />
                        <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />

                        <div class="d-flex justify-content-between mt-4">
                            <a href="@ViewData["ReturnUrl"]" class="btn btn-outline-secondary">Zurück</a>
                            <button type="submit" class="btn btn-primary">Speichern</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
