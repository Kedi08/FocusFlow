@model FocusFlow.Models.Aktivitaet

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Aktivitaet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AktivitaetId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartdatumGeplant" class="control-label"></label>
                <input asp-for="StartdatumGeplant" class="form-control" />
                <span asp-validation-for="StartdatumGeplant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnddatumGeplant" class="control-label"></label>
                <input asp-for="EnddatumGeplant" class="form-control" />
                <span asp-validation-for="EnddatumGeplant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartdatumEffektiv" class="control-label"></label>
                <input asp-for="StartdatumEffektiv" class="form-control" />
                <span asp-validation-for="StartdatumEffektiv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnddatumEffektiv" class="control-label"></label>
                <input asp-for="EnddatumEffektiv" class="form-control" />
                <span asp-validation-for="EnddatumEffektiv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Budget" class="control-label"></label>
                <input asp-for="Budget" class="form-control" />
                <span asp-validation-for="Budget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KostenEffektiv" class="control-label"></label>
                <input asp-for="KostenEffektiv" class="form-control" />
                <span asp-validation-for="KostenEffektiv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fortschritt" class="control-label"></label>
                <input asp-for="Fortschritt" class="form-control" />
                <span asp-validation-for="Fortschritt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MitarbeiterId" class="control-label"></label>
                <select asp-for="MitarbeiterId" class="form-control" asp-items="ViewBag.MitarbeiterId"></select>
                <span asp-validation-for="MitarbeiterId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />
        </form>
    </div>
</div>

<div>
    <a href="@ViewData["ReturnUrl"]">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
