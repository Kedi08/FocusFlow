@model FocusFlow.Models.Projekt

@{
    ViewData["Title"] = "Projekt löschen";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">⚠ Projekt löschen</h2>
                </div>
                <div class="card-body">
                    <p class="lead text-danger">Bist du sicher, dass du dieses Projekt unwiderruflich löschen möchtest?</p>

                    <ul class="list-group mb-3">
                        <li class="list-group-item"><strong>Titel:</strong> @Model.Titel</li>
                        <li class="list-group-item"><strong>Beschreibung:</strong> @Model.Beschreibung</li>
                    </ul>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ProjektId" />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">Abbrechen</a>
                            <button type="submit" class="btn btn-danger">🗑 Löschen</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
