@model IEnumerable<FocusFlow.Models.Projekt>

@{
    ViewData["Title"] = "Übersicht Projekte";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Übersicht Projekte</h2>
        <a asp-action="Create" class="btn btn-primary">+ Neues Projekt</a>
    </div>

    <div class="table-responsive mt-3">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Titel)</th>
                    <th>Priorität</th>
                    <th>@Html.DisplayNameFor(model => model.First().Status)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Fortschritt)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Projektleiter)</th>
                    <th>Aktionen</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Titel)</td>
                        <td>@Html.DisplayFor(modelItem => item.Prioritaet)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        <td>@Html.DisplayFor(modelItem => item.Fortschritt)%</td>
                        <td>@($"{item.Projektleiter.Vorname} {item.Projektleiter.Nachname}")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.ProjektId" class="btn btn-info btn-sm">ℹ Details</a>
                                <a asp-action="Delete" asp-route-id="@item.ProjektId" class="btn btn-danger btn-sm">🗑 Löschen</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
