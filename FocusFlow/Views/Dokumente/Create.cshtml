@model FocusFlow.Models.Dokument

@{
    ViewData["Title"] = "Dokument hinzufügen";
}

<h1>Dokument hinzufügen</h1>

<h4>Dokument</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Typ" class="control-label"></label>
                <input asp-for="Typ" class="form-control" />
                <span asp-validation-for="Typ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pfad" class="control-label"></label>
                <input asp-for="Pfad" class="form-control" />
                <span asp-validation-for="Pfad" class="text-danger"></span>
            </div>
            <input type="hidden" name="parentId" value="@ViewBag.ParentId" />
            <input type="hidden" name="parentType" value="@ViewBag.ParentType" />
            <br />
            <div class="form-group">
                <input type="submit" value="Dokument hinzufügen" class="btn btn-primary" />
            </div>
            <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}