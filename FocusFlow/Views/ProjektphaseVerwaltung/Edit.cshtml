@model FocusFlow.Models.Projektphase

@{
    ViewData["Title"] = "Projektphase bearbeiten";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Projektphase bearbeiten</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="ProjektphaseId" />
                        <input type="hidden" asp-for="VorgehensmodellId" />

                        <div class="mb-3">
                            <label asp-for="ProjektphaseName" class="form-label">Projektphasen-Name</label>
                            <input asp-for="ProjektphaseName" class="form-control" placeholder="Name der Phase eingeben" />
                            <span asp-validation-for="ProjektphaseName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DauerInTagen" class="form-label">Dauer (Tage)</label>
                            <input asp-for="DauerInTagen" type="number" min="1" class="form-control" placeholder="Anzahl der Tage" />
                            <span asp-validation-for="DauerInTagen" class="text-danger"></span>
                        </div>

                        <h5>Geplante Daten</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="StartdatumGeplant" class="form-label">Geplantes Startdatum</label>
                                <input asp-for="StartdatumGeplant" type="date" class="form-control" />
                                <span asp-validation-for="StartdatumGeplant" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="EnddatumGeplant" class="form-label">Geplantes Enddatum</label>
                                <input asp-for="EnddatumGeplant" type="date" class="form-control" />
                                <span asp-validation-for="EnddatumGeplant" class="text-danger"></span>
                            </div>
                        </div>

                        <h5>Effektive Daten</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="StartdatumEffektiv" class="form-label">Effektives Startdatum</label>
                                <input asp-for="StartdatumEffektiv" type="date" class="form-control" />
                                <span asp-validation-for="StartdatumEffektiv" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="EnddatumEffektiv" class="form-label">Effektives Enddatum</label>
                                <input asp-for="EnddatumEffektiv" type="date" class="form-control" />
                                <span asp-validation-for="EnddatumEffektiv" class="text-danger"></span>
                            </div>
                        </div>

                        <h5>Review & Freigabe</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="ReviewdatumGeplant" class="form-label">Geplantes Reviewdatum</label>
                                <input asp-for="ReviewdatumGeplant" type="date" class="form-control" />
                                <span asp-validation-for="ReviewdatumGeplant" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ReviewdatumEffektiv" class="form-label">Effektives Reviewdatum</label>
                                <input asp-for="ReviewdatumEffektiv" type="date" class="form-control" />
                                <span asp-validation-for="ReviewdatumEffektiv" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Freigabedatum" class="form-label">Freigabedatum</label>
                            <input asp-for="Freigabedatum" type="date" class="form-control" />
                            <span asp-validation-for="Freigabedatum" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Freigabevermerk" class="form-label">Freigabevermerk</label>
                            <input asp-for="Freigabevermerk" class="form-control" placeholder="Vermerk zur Freigabe" />
                            <span asp-validation-for="Freigabevermerk" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label">Status</label>
                            <select asp-for="Status" class="form-select">
                                <option value="">Status auswählen</option>
                                <option value="Geplant">Geplant</option>
                                <option value="In Bearbeitung">In Bearbeitung</option>
                                <option value="Abgeschlossen">Abgeschlossen</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Fortschritt" class="form-label">Fortschritt (%)</label>
                            <input asp-for="Fortschritt" type="number" class="form-control" min="0" max="100" step="1" placeholder="0 - 100%" />
                            <span asp-validation-for="Fortschritt" class="text-danger"></span>
                        </div>

                        <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />

                        <div class="d-flex justify-content-between mt-4">
                            <a href="@ViewData["ReturnUrl"]" class="btn btn-outline-secondary">Abbrechen</a>
                            <button type="submit" class="btn btn-primary">Speichern</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
