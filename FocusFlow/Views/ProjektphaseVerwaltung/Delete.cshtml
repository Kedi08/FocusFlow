@model FocusFlow.Models.Projektphase

@{
    ViewData["Title"] = "Projektphase löschen";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">⚠ Projektphase löschen</h2>
                </div>
                <div class="card-body">
                    <p class="lead text-danger">Bist du sicher, dass du diese Projektphase unwiderruflich löschen möchtest?</p>

                    <ul class="list-group mb-3">
                        <li class="list-group-item"><strong>Projektphase:</strong> @Model.ProjektphaseName</li>
                        <li class="list-group-item"><strong>Dauer (Tage):</strong> @Model.DauerInTagen</li>
                        <li class="list-group-item"><strong>Status:</strong> @Model.Status</li>
                        <li class="list-group-item"><strong>Fortschritt:</strong> @Model.Fortschritt%</li>
                    </ul>

                    <h5>Zeitraum</h5>
                    <ul class="list-group mb-3">
                        <li class="list-group-item"><strong>Geplantes Startdatum:</strong> @Model.StartdatumGeplant?.ToString("dd.MM.yyyy")</li>
                        <li class="list-group-item"><strong>Geplantes Enddatum:</strong> @Model.EnddatumGeplant?.ToString("dd.MM.yyyy")</li>
                        <li class="list-group-item"><strong>Effektives Startdatum:</strong> @Model.StartdatumEffektiv?.ToString("dd.MM.yyyy")</li>
                        <li class="list-group-item"><strong>Effektives Enddatum:</strong> @Model.EnddatumEffektiv?.ToString("dd.MM.yyyy")</li>
                    </ul>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ProjektphaseId" />
                        <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />

                        <div class="d-flex justify-content-between">
                            <a href="@ViewData["ReturnUrl"]" class="btn btn-outline-secondary">Abbrechen</a>
                            <button type="submit" class="btn btn-danger">🗑 Löschen</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
