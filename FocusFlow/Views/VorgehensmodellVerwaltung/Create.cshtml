@model FocusFlow.Models.Vorgehensmodell

@{
    ViewData["Title"] = "Vorgehensmodell erstellen";
}

<h1>Vorgehensmodell erstellen</h1>
<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <h4>Projektphasen</h4>
    <table class="table" id="phasenTable">
        <thead>
            <tr>
                <th>Name</th>
                <th>Dauer (Tage)</th>
                <th>Aktionen</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

    <button type="button" class="btn btn-secondary" onclick="addPhase()">Phase hinzufügen</button>

    <div class="form-group mt-3">
        <input type="submit" value="Vorgehensmodell erstellen" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Zurück zur Liste</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        let phaseCounter = 0;

        function addPhase() {
            let table = document.getElementById("phasenTable").getElementsByTagName('tbody')[0];
            let row = table.insertRow();

            let nameCell = row.insertCell(0);
            let durationCell = row.insertCell(1);
            let actionsCell = row.insertCell(2);

            nameCell.innerHTML = `<input type="text" name="Projektphasen[${phaseCounter}].ProjektphaseName" class="form-control" required />`;
            durationCell.innerHTML = `<input type="number" name="Projektphasen[${phaseCounter}].DauerInTagen" class="form-control" required />`;
            actionsCell.innerHTML = `<button type="button" class="btn btn-danger btn-sm" onclick="removePhase(this)">Löschen</button>`;

            phaseCounter++;
        }

        function removePhase(button) {
            let row = button.parentNode.parentNode;
            row.parentNode.removeChild(row);
        }
    </script>
}
