@model IEnumerable<FocusFlow.Models.Vorgehensmodell>

@{
    ViewData["Title"] = "Vorgehensmodell-Vorlagen";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Vorgehensmodell-Vorlagen</h2>
        <a asp-action="Create" class="btn btn-primary">+ Neues Vorgehensmodell</a>
    </div>

    <div class="table-responsive mt-3">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                    <th>Aktionen</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.VorgehensmodellId" class="btn btn-warning btn-sm">✏ Bearbeiten</a>
                                <a asp-action="Delete" asp-route-id="@item.VorgehensmodellId" class="btn btn-danger btn-sm">🗑 Löschen</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
